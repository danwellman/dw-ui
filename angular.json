{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "dw-ui": {
      "projectType": "library",
      "root": "projects/dw-ui",
      "sourceRoot": "projects/dw-ui/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/dw-ui/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/dw-ui/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/dw-ui/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": "projects/dw-ui/.storybook",
            "browserTarget": "dw-ui:build",
            "compodoc": true,
            "compodocArgs": [
              "-e",
              "json",
              "-d",
              "projects/dw-ui"
            ],
            "port": 6006
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "projects/dw-ui/.storybook",
            "browserTarget": "dw-ui:build",
            "compodoc": true,
            "compodocArgs": [
              "-e",
              "json",
              "-d",
              "projects/dw-ui"
            ],
            "outputDir": "storybook-static"
          }
        }
      }
    },
    "storybook": {
      "projectType": "application",
      "root": "stories",
      "sourceRoot": "stories",
      "architect": {
        "build": {
          "options": {
            "tsConfig": "tsconfig.json",
            "styles": [],
            "scripts": []
          }
        }
      }
    }
  }
}
